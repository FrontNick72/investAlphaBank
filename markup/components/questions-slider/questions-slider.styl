.owl-item
  &.active
    &:nth-child(2)
      margin-left 40px
      margin-right 70px

.questions-slider
  padding-bottom 160px
  padding-top 45px
  width 100%

  &__item
    background-color #FFFFFF
    border-radius 3px
    box-shadow 0 2px 24px 0 rgba(0,0,0,0.08), 0 2px 4px 0 rgba(181,187,194,0.1)
    padding 30px 30px 32px 30px
    max-width 262px
    width 20%

    &_active
      // width 554px !important
      max-width 554px
      margin-top -40px
      padding 40px 40px 50px
      width 80%

      & ^[0]__title
        font-size 26px
        font-weight 300
        line-height 30px
        margin-bottom 24px

      & ^[0]__text
        display block

       & ^[0]__button
         display none

  &__title
    color #172A3F
    font-size $fz-medium
    font-weight 400
    line-height 24px
    margin-bottom 50px

  &__text
    color #546271
    display none
    font-size 15px
    font-weight 300
    line-height 28px

  &__bullets
    display flex
    align-items center
    position absolute
    bottom 80px
    left 27%

  &__bullet
    background-color #6D7986
    border-radius 50%
    width 8px
    height 8px
    margin-right 22px
    opacity 0.2
    display block
    cursor pointer
    $transition(opacity)
    &:not(&_is_active)
      &:hover
        opacity 0.5
    &:last-child
      margin-right 0
    &_is_active
      background-color #F03226
      opacity 1

  &__button
    .button-invest
      border-radius 4px
      border 1px solid rgba(109,121,134, 0.2)
      box-shadow none
      background transparent
      color #6D7986
      font-size 14px
      line-height 16px
      padding 12px

      &:hover
        background $c-ui_red
        border 1px solid $c-ui_red
        box-shadow 0 1px 8px 0 rgba(0,0,0,0.2)
        border-radius 6px
        color #fff
