.investment-options
  height 676px
  padding-top 50px
  position relative
  z-index 1

  &__title
    color #FFFFFF
    font-size $fz-triple
    font-weight 100
    line-height 42px
    margin-bottom 32px

  &__content
    display none

    &_active
      display block

  &__button
    margin-bottom 93px
    button
      padding 18px 48px

  &__social-icon
    background transparent
    border-radius 4px
    border 1px solid rgba(255,255,255, 0.2)
    display flex
    justify-content center
    align-items center
    margin-right 16px
    text-decoration none
    height 56px
    width 56px
    $transition(background)

    &:hover
      background rgba(255,255,255, 0.1)
  &__tabs
    border 1px solid rgba(255, 255, 255, 0.2)
    border-radius 3px
    display inline-flex
    margin-bottom 40px

  &__text
    color #fff
    font-size $fz-large
    font-weight 300
    line-height 26px
    margin-bottom 17px
    width 42%

    a
      color #fff

    &_margin
      margin-bottom 20px

    &_margin-big
      margin-bottom 60px

  &__steps
    display inline-flex
    position absolute
    bottom 115px
    left 15px

  &__button-contact
    .button-invest
      padding 20px 58px
      position absolute
      bottom 162px
      left 15px

  &__step
    border-bottom 3px solid rgba(242,242,242, 0.1)
    color rgba(255,255,255,0.2)
    cursor pointer
    font-size 16px
    font-weight 500
    line-height 19px
    text-decoration none
    text-align right
    padding-right 0
    padding-left 47px
    padding-bottom 16px
    $transition(color)

    &_active
      border-color $c-ui_red
      color #fff
      padding-right 47px
      padding-left 0
      text-align left

    &:hover
      color #fff

  &__download-block
    display flex
    margin-bottom 20px

  &__tab-wrapper
    display none

    &_active
      display block

  &__desktop-block
    position absolute
    bottom 162px
    right 15px

  &__tab
    border-right 1px solid rgba(255, 255, 255, 0.2)
    color #FFFFFF
    font-size 15px
    line-height 18px
    padding 12px
    text-decoration none
    $transition(background)

    &_active
      background rgba(255,255,255, 0.1)
      color rgba(255, 255, 255, 0.4)

    &:hover
      background rgba(255,255,255, 0.1)

    &:last-child
      border-right 0

.mobile-block
  position absolute
  bottom 0
  right 27px

  &__photo-wrapper
    position absolute
    top 63px
    left 68px

  &__photo
    display none

    &_active
      display block
