.popup
  position fixed
  z-index 3
  width 100%
  opacity 1
  justify-content center
  align-items center
  background-color rgba(#0B1F35, 10%)
  top 0
  left 0
  right 0
  bottom 0
  padding-top 30px
  padding-bottom 30px
  display flex
  &__content
    width 100%
  &__container
    position relative
  &__body
    box-shadow 0 2px 24px 0 rgba(0,0,0,0.08), 0 2px 4px 0 rgba(181,187,194,0.1)
    background-color #fff
    border-radius 4px
  &__close-button
    background url('%=static=%/general/close.png') no-repeat
    background-size cover
    cursor pointer
    display flex
    align-items center
    justify-content center
    text-align center
    position absolute
    top 20px
    right 35px
    z-index 1
    width 17px
    height 17px

    &_grey
      background url('%=static=%/general/close-grey.png') no-repeat

