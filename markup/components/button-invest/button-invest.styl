.button-invest
  background-color $c-ui_red
  border 0
  border-radius 6px
  box-shadow 0 1px 8px 0 rgba(0,0,0,0.2)
  color #fff
  font-size $fz-medium
  font-weight 500
  line-height 19px
  display flex
  align-items center
  justify-content center
  padding 20px 25px
  $transition(background-color)

  &:hover
    background-color $c-darkred
    box-shadow none
    transition 0.3s ease box-shadow
