.button-invest
  background-color #F03226
  border 0
  border-radius 6px
  box-shadow 0 1px 8px 0 rgba(0,0,0,0.2)
  color #fff
  font-size $fz-medium
  font-weight 500
  line-height 19px
  display flex
  align-items center
  justify-content center
  margin-bottom 92px
  height 60px
  width 222px

  &:hover
    box-shadow none
    transition 0.3s ease box-shadow
