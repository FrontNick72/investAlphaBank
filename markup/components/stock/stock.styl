.stock

  &__header
    background url('%=static=%/general/inner_pif_opif_akop.jpg') no-repeat
    background-size cover
    background-position 0 -130px
    padding 41px 115px 43px 124px
    position relative

    &:before
      content ''
      background-color rgba(41,64,100,0.5)
      background linear-gradient(270deg, rgba(23,42,63,0) 0%, rgba(23,42,63,0.5) 100%)
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      height 100%
      width 100%
      z-index 1

  &__type
    color #FFFFFF
    font-size $fz-medium
    font-weight 500
    line-height 19px
    margin-bottom 23px
    position relative
    z-index 1

  &__row
    align-items flex-end
    display inline-flex
    justify-content space-between
    width 100%
    position relative
    z-index 1

  &__name
    color #FFFFFF
    font-size $fz-triple
    font-weight 300
    line-height 47px
    margin-bottom 2px

  &__company
    color #FFFFFF
    font-size 15px
    font-weight 300
    line-height 18px

  &__button
    .button-invest
      padding 20px 48px

  &__body
    border-bottom 1px solid rgba(109,121,134, 0.2)
    background-color #fff
    padding 40px 105px

  &__title
    color #172A3F
    font-size $fz-xxl
    font-weight 300
    line-height 28px
    margin-bottom 24px

  &__text
    color #172A3F
    font-size 15px
    font-weight 300
    line-height 28px
    margin-bottom 40px

  &__list
    display flex
    flex-direction column
    list-style none
    margin 0
    padding 0
    margin-bottom 40px

  &__list-item
    display inline-flex
    align-items center
    color #172A3F
    font-size 15px
    font-weight 300
    line-height 18px
    margin-bottom 11px

  &__icon
    border 1px solid rgba(109,121,134,.21)
    border-radius 50%
    display flex
    align-items center
    justify-content center
    margin-right 11px
    height 33px
    width 33px

.file-info
  display flex
  align-items center

  &__icon
    margin-right 15px

  &__name
    color #172A3F
    font-size 15px
    line-height 18px
    margin-bottom 2px

  &__size
    color #6D7986
    font-size 10px
    line-height 11px

