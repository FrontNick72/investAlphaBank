  z-index 1

  &__title
    color #FFFFFF
    font-size $fz-triple
    font-weight 100
    line-height 42px
    margin-bottom 40px

.conditions-wrapper
  padding-left 26px
  margin-bottom 80px

.condition
  position relative

  &__title
    color #FFFFFF
    font-size $fz-xxl
