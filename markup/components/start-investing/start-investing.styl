.start-investing

  &__title
    color #172A3F
    font-size $fz-giant
    font-weight 100
    line-height 42px
    margin-bottom 60px

  &__button
    margin-top 8px

.step-invest
  border-radius 8px
  background-color #FFFFFF
  box-shadow 0 2px 24px 0 rgba(0,0,0,0.08), 0 2px 4px 0 rgba(181,187,194,0.1)
  display flex
  align-items center
  justify-content space-between
  margin-bottom 32px
  padding 46px 31px

  &__content
    display flex
    flex-direction column
    padding-left 31px
    width 75%

  &__title
    color #172A3F
    font-size $fz-xxl
    font-weight 300
    line-height 26px
    margin-bottom 16px

  &__text
    color #172A3F
    font-size 15px
    font-weight 300
    line-height 22px

  &__icon
    border: 2px solid #F03226
    border-radius: 50%
    display flex
    justify-content center
    align-items center
    position relative
    z-index 1
    height 118px
    width 118px

  &__number
    content ''
    display flex
    align-items center
    justify-content center
    position absolute
    top 0
    left 4px
    border-radius 50%
    background-color #F03226
    box-shadow 0 2px 10px 0 rgba(0,0,0,0.12), 0 2px 4px 0 rgba(181,187,194,0.24)
    color #fff
    font-size $fz-large
    font-weight 700
    height 30px
    width 30px
    z-index 2


