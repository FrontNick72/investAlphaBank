.start-investing

  &__title
    color #172A3F
    font-size $fz-double
    font-weight 100
    line-height 34px
    margin-bottom 40px

    +above('sm')
      font-size $fz-triple
      margin-bottom 50px

    +above('md')
      font-size $fz-giant
      line-height 42px
      margin-bottom 60px


  &__button
    margin-top 8px

.step-invest
  border-radius 8px
  background-color #FFFFFF
  box-shadow 0 2px 24px 0 rgba(0,0,0,0.08), 0 2px 4px 0 rgba(181,187,194,0.1)
  display flex
  align-items center
  justify-content space-between
  flex-direction column
  margin-bottom 32px
  padding 35px 30px

  +above('sm')
    flex-direction row
    padding 46px 31px

  &__content
    display flex
    flex-direction column
    padding-left 0
    text-align center
    width 100%

    +above('sm')
      padding-left 31px
      text-align left
      width 75%

  &__title
    color #172A3F
    font-size $fz-xxl
    font-weight 300
    line-height 26px
    margin-bottom 16px

  &__text
    color #172A3F
    font-size 15px
    font-weight 300
    line-height 22px

  &__icon
    border: 2px solid #F03226
    border-radius 50%
    display flex
    justify-content center
    align-items center
    position relative
    z-index 1
    margin-bottom 16px
    height 100px
    width 100px

    +above('sm')
      margin-bottom 0
      height 118px
      width 118px

  &__number
    content ''
    display flex
    align-items center
    justify-content center
    position absolute
    top 0
    left 0
    border-radius 50%
    background-color #F03226
    box-shadow 0 2px 10px 0 rgba(0,0,0,0.12), 0 2px 4px 0 rgba(181,187,194,0.24)
    color #fff
    font-size $fz-medium
    font-weight 700
    height 25px
    width 25px
    z-index 2

    +above('sm')
      font-size $fz-large
      left 4px
      height 30px
      width 30px

