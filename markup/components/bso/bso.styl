.bso
  padding-bottom 80px

  &__header
    border-bottom 1px solid rgba(109,121,134, 0.2)
    padding 41px 105px 32px

  &__type
    opacity 0.4
    color #6D7986
    font-size $fz-medium
    font-weight 500
    line-height 19px
    margin-bottom 20px

  &__list
    display flex
    flex-direction column
    list-style none
    margin 0
    padding 0
    margin-bottom 40px

  &__list-text
    position relative

    ^[0]__list-content &
      &_mark
        &:before
          top 2px

      &_mark-two
        &:after
          top 2px

    &_mark
      &:before
        content ''
        border-radius 50%
        background-color #EF3124
        position absolute
        top 7px
        right -5px
        height 4px
        width 4px

    &_mark-two
      &:after
        content ''
        border-radius 50%
        background-color #EF3124
        position absolute
        top 7px
        right -11px
        height 4px
        width 4px

  &__list-item
    display inline-flex
    align-items flex-start
    color #172A3F
    font-size 15px
    font-weight 300
    line-height 18px
    margin-bottom 11px

    p
      margin 0
      line-height 33px

  &__block
    display flex
    align-items center

  &__logo
    border-radius 50%
    background-color #4A8565
    color #FFFFFF
    font-size $fz-xxl
    line-height 24px
    padding 28px 33px
    margin-right 32px

  &__definitions
    padding-left 19px

  &__definition
    color rgba(109,121,134, 0.5)
    font-size $fz-xsmall
    line-height 18px
    margin-bottom 21px
    position relative

    &_two
      &:after
        content ''
        border-radius 50%
        background-color #EF3124
        position absolute
        top 4px
        left -13px
        height 4px
        width 4px

    &:before
      content ''
      border-radius 50%
      background-color #EF3124
      position absolute
      top 4px
      left -19px
      height 4px
      width 4px

    &:last-child
      margin-bottom 0

  &__icon
    border 1px solid rgba(109,121,134,.21)
    border-radius 50%
    display flex
    align-items center
    justify-content center
    margin-right 11px
    height 33px
    width 33px

  &__name
    color #4A4A4A
    font-size 28px
    font-weight 300
    line-height 33px

  &__row
    align-items center
    display inline-flex
    justify-content space-between
    width 100%
    position relative
    z-index 1

  &__list-content
    p
      line-height 28px

  &__body
    padding 40px 105px 0
    overflow auto
    max-height 500px

  &__title
    color #172A3F
    font-size $fz-xxl
    font-weight 300
    line-height 28px
    margin-bottom 24px

  &__text
    color #172A3F
    font-size 15px
    font-weight 300
    line-height 28px
    margin-bottom 40px

  &__button
    .button-invest
      padding 20px 48px
