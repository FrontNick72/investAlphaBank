.navbar
  display flex
  justify-content space-between
  overflow auto
  $scrollbar()

  &_vertical
    flex-direction column
    overflow initial
    margin-bottom 40px

  &_in_footer
    +below('xs')
      flex-direction column
      overflow initial

  &__link
    color #fff
    $transition(color)
    line-height 19px
    margin-right 30px
    text-decoration none
    flex-shrink 0

    &:last-child
      margin-right 0

    ^[0]_vertical &
      $font-size($fz-xlarge)
      margin-bottom 29px
      &:last-child
        margin-bottom 0

    ^[0]_in_footer &
      color $c-lightgray

      +below('xs')
        margin-bottom 20px

        &:last-child
          margin-bottom 0

    &:hover
      color $c-red
      text-decoration underline
