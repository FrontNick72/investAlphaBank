@import './_rupture_config.styl'

$padding = 30px
$columns = 12

.container
  margin auto
  padding 0 ($padding / 2)
  width 100%
  +above('sm')
    width 730px
  +above('md')
    width 920px
  +above('lg')
    width 1150px

.row
  margin-left -($padding / 2)
  margin-right -($padding / 2)
  display flex
  flex-flow row wrap

  &_no-wrap
    flex-flow row nowrap

  &_center
    justify-content center
    &-md
      +below('md')
        justify-content center
    &-xs
      +below('xs')
        justify-content center

column($preffix, $columns)
  for $column in 1..$columns
    .column{$preffix}-{$column}
      width percentage($column/$columns)

.column
  padding 0 ($padding / 2)
  width 100%
  display flex
  flex-flow column nowrap


column('_xs', $columns)

+above('sm')
  column('_sm', $columns)

+above('md')
  column('_md', $columns)

+above('lg')
  column('_lg', $columns)
