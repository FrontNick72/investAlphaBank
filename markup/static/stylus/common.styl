@import './_grid.styl'
@import './_rupture_config.styl'
@require '../../../node_modules/swiper/dist/css/swiper.min.css'

html, body
  height 100%


.page
  font-family $font
  font-size 16px
  line-height 1
  font-weight 400

.page-wrapper
  min-height 100%
  margin-bottom -50px

* html .page__wrapper
  height 100%

.page__buffer
  height 50px

.link
  font-size $fz-small
  line-height 1.225
  color $c-lightgray
  transition .3s ease color
  &:hover
    color $c-red

.section
  position relative
  padding 100px 0
  +below('md')
    padding 70px 0
  +below('sm')
    padding 40px 0
  &_size_large
    padding 120px 0
    +below('md')
      padding 80px 0
    +below('sm')
      padding 40px 0
  &_size_small
    padding 80px 0
    +below('sm')
      padding 40px 0
  &_size_xsmall
    padding 40px 0 120px
  &_has_no-offset-bottom
    padding-bottom 0
  &_theme_default
    background-color $c-background_default
  &_theme_content
    background-color $c-background_content

.section-wrapper
  background-color $c-background_content
  border-top 1px solid $c-background_default
  width 100%

  +below('xs')
    padding-right 15px
    padding-left 15px
