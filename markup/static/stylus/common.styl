@import './_grid.styl'
@import './_rupture_config.styl'
@require '../../../node_modules/swiper/dist/css/swiper.min.css'
@require '../../../node_modules/owl.carousel/dist/assets/owl.carousel.css'

html, body
  height 100%


.page
  font-family $font
  font-size 16px
  line-height 1
  font-weight 400

.page-wrapper
  min-height 100%
  margin-bottom -50px

* html .page__wrapper
  height 100%

.page__buffer
  height 50px

.link
  font-size $fz-small
  line-height 1.225
  color $c-lightgray
  transition .3s ease color
  &:hover
    color $c-red

.section
  position relative
  padding 100px 0
  +below('md')
    padding 70px 0
  +below('sm')
    padding 40px 0
  &_size_large
    padding 120px 0
    +below('md')
      padding 80px 0
    +below('sm')
      padding 40px 0
  &_size_small
    padding 80px 0
    +below('sm')
      padding 40px 0
  &_size_xsmall
    padding 40px 0 120px
  &_has_no-offset-bottom
    padding-bottom 0
  &_has_no-offset-top
    padding-top 0
  &_theme_default
    background-color $c-background_default
  &_theme_content
    background-color $c-background_content
  &_blue_gradient
    background url(../img//general/depositBackground.png) no-repeat
    background-size cover
    position relative

    &:before
      content ''
      background-color #333B47
      background radial-gradient(circle, rgba(116,138,170,0.4) 0%, rgba(38,46,98,0) 100%), linear-gradient(188.52deg, #636D7B 0%, rgba(46,75,110,0) 100%), linear-gradient(169.82deg, #171D26 0%, rgba(36,55,100,0.1) 100%), radial-gradient(circle, rgba(119,130,146,0.7) 0%, rgba(64,99,127,0) 100%)
      position absolute
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      height 100%
      width 100%

    &:after
      content ''
      background-color #294064
      background radial-gradient(circle, rgba(107,155,192,0.4) 0%, rgba(38,46,98,0) 100%), linear-gradient(188.52deg, #597494 0%, rgba(46,75,110,0) 100%), linear-gradient(167.01deg, #353853 0%, rgba(36,55,100,0.1) 100%), radial-gradient(circle, rgba(95,134,164,0.7) 0%, rgba(64,99,127,0) 100%)
      position absolute
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      height 100%
      width 100%

  &_dark_gradient
    background url(../img//general/depositBackground.png) no-repeat
    background-size cover
    position relative

    &:before
      content ''
      background-color #294064
      background radial-gradient(circle, rgba(107,155,192,0.4) 0%, rgba(38,46,98,0) 100%), linear-gradient(188.52deg, #597494 0%, rgba(46,75,110,0) 100%), linear-gradient(167.01deg, #353853 0%, rgba(36,55,100,0.1) 100%), radial-gradient(circle, rgba(95,134,164,0.7) 0%, rgba(64,99,127,0) 100%)
      position absolute
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      height 100%
      width 100%

.section-wrapper
  background-color $c-background_content
  border-top 1px solid $c-background_default
  width 100%

  +below('xs')
    padding-right 15px
    padding-left 15px

.invisible
  visibility hidden!important

for item in 'xs' 'sm' 'md' 'lg'
  .hidden-{item}
    +below(item)
      display none!important

.visible-only-xs
  +above('sm')
    display none!important

.visible-only-sm
  +above('md')
    display none!important

.visible-only-md
  +above('lg')
    display none!important

.fadeOut
  animation fadeOut .3s ease forwards!important

@keyframes fadeOut
  0%
    opacity 1
  100%
    opacity 0

.wow
  visibility hidden
  animation-duration .4s
  animation-fill-mode both

@keyframes fadeInUp {
  0% {
    opacity: 0;
    -webkit-transform: translateY(20px);
    -ms-transform: translateY(20px);
    transform: translateY(20px);
  }

  100% {
    opacity: 1;
    -webkit-transform: translateY(0);
    -ms-transform: translateY(0);
    transform: translateY(0);
  }
}

.fadeInUp {
  -webkit-animation-name: fadeInUp;
  animation-name: fadeInUp;
}

@keyframes slideInRight
  0%
    opacity 0
    -webkit-transform translateX(2000px)
    transform translateX(2000px)

  100%
    -webkit-transform translateX(0)
    transform translateX(0)

.slideInRight
  -webkit-animation-name slideInRight
  animation-name slideInRight

